<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.Menu"
              Title="Menu" >
      <ContentPage.Content>
        <StackLayout>
            <Image Source="logo.png" Margin="15, 15, 0, 0" 
				   HorizontalOptions="StartAndExpand" WidthRequest="60" HeightRequest="60"/>
            <TableView Intent="Data">
                <TableView.Root>
                    <TableSection>
                        <TextCell Text="Inserir novo registro" TextColor="Black"
							Command="{Binding MenuTapped}"  CommandParameter="novo"/>
                        <TextCell Text="Sair" TextColor="Black"
							Command="{Binding MenuTapped}" CommandParameter="sair"/>
                    </TableSection>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>